<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/newQuoteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorScreenBackground"
        android:backgroundTint="@color/colorScreenBackground"
        android:fontFamily="sans-serif-condensed-light"
        android:text="NUEVA CITA"
        android:textColor="@color/colorTextoNuevaCita"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/autorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/quoteTextView"
        app:layout_constraintTop_toBottomOf="@+id/quoteTextView"
        tools:text="A. Dumblendore" />

    <TextView
        android:id="@+id/quoteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-light"
       tools:text="Somos nuestras decisiones"
        android:textColor="@color/colorTexto"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
